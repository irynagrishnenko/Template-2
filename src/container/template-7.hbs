<div class='hero'>
  {{#with hero}}
    <h1 class='hero_title'>{{title}}</h1>
    <p class='hero_description'>{{description}}</p>
    <a
      class='hero_button'
      href='{{button.url}}'
    >{{button.text}}</a>
  {{/with}}
</div>

<div class='about'>
  <h2 class='about_heading'>{{about.heading}}</h2>
  <p class='about_info'>{{about.info}}</p>
</div>

<div class='articles'>
  <div class='articles_header'>
    <h3 class='articles_heading'>Our Articles</h3>
    <a
      class='articles_heading_button'
      href='www.example.com'
    >View All</a>
  </div>
  <div class='articles_group_card'>
	{{> articleCardDark}}
  </div>
</div>